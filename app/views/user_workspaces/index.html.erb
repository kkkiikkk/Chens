<h1>User Workspaces for <%= @workspace.name %></h1>

<%= form_with url: workspace_user_workspaces_path(@workspace), method: :get, local: true do %>
  <div class="form-group">
    <%= label_tag :search, "Search by User Name:" %>
    <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Enter user name" %>
  </div>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Role</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @user_workspaces.each do |user_workspace| %>
      <tr>
        <td><%= user_workspace.user.name %></td>
        <td><%= user_workspace.role %></td>
        <td>
          <% if user_workspace.blocked %>
            <span class="badge bg-danger">Blocked</span>
          <% else %>
            <span class="badge bg-success">Active</span>
          <% end %>
        </td>
        <td>
          <%= link_to 'Edit', edit_workspace_user_workspace_path(@workspace, user_workspace.user), class: 'btn btn-warning' %>
          
          <% if user_workspace.blocked %>
            <%= link_to 'Unblock', unblock_workspace_user_workspace_path(@workspace, user_workspace.user), method: :patch, class: 'btn btn-success', data: { confirm: 'Are you sure you want to unblock this user?' } %>
          <% else %>
            <%= link_to 'Block', block_workspace_user_workspace_path(@workspace, user_workspace.user), method: :patch, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to block this user?' } %>
          <% end %>          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back to Workspace', workspace_path(@workspace), class: 'btn btn-primary' %>
