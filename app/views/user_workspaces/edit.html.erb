<%= form_with model: [@workspace, @user_workspace], local: true do |f| %>
  <%= f.label :profile_name %>
  <%= f.text_field :profile_name %>

  <% if current_user_is_owner? %>
    <%= f.label :role %>
    <%= f.select :role, options_for_select(['member', 'admin', 'owner'], @user_workspace.role) %>
  <% end %>

  <%= f.submit 'Save' %>
<% end %>
