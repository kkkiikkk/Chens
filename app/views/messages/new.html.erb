<h1>New Message in <%= @chat.name %></h1>

<%= form_with model: [@workspace, @chat, @message], local: true do |form| %>
  <div class="form-group">
    <%= form.label :text %>
    <%= form.text_area :text, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :image, "Attach an Image" %>
    <%= form.file_field :image, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :reply_id, "Reply to (Message ID)" %>
    <%= form.number_field :reply_id, class: 'form-control' %>
  </div>

  <%= form.submit 'Send Message', class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Back to Messages', workspace_chat_messages_path(@workspace, @chat), class: 'btn btn-secondary' %>
