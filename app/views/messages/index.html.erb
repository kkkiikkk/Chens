<h1>Messages in <%= @chat.name %></h1>

<div id="chat" data-chat-id="<%= @chat.id %>" data-workspace-id="<%= @workspace.id %>">
  
  <div id="messages" class="messages-list">
    <% @messages.each do |message| %>
      <%= render partial: "message", locals: { message: message, workspace: @workspace, chat: @chat } %>
    <% end %>
  </div>

  <turbo-frame id="new_message">
    <%= form_with(model: [@workspace, @chat, Message.new], local: false) do |form| %>
      <div class="form-group">
        <%= form.text_area :text, placeholder: "Enter your message", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.file_field :image, class: "form-control" %>
      </div>
      <%= form.submit "Send", class: "btn btn-primary" %>
    <% end %>
  </turbo-frame>

</div>
