<%= form_with url: workspace_chats_path(@workspace), method: :post, local: true, 'data-turbolinks': false do |form| %>
  <div class="form-group">
    <%= form.label :chat_name, "Chat Name" %>
    <%= form.text_field :chat_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :chat_type, "Chat Type" %>
    <%= form.select :chat_type, options_for_select([['Public', 'public'], ['Private', 'private'], ['P2P', 'p2p']]), {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :companion_id, "Companion User ID" %>
    <%= form.text_field :companion_id, class: 'form-control' %>
  </div>

  <%= form.submit 'Create Chat', class: 'btn btn-primary' %>
<% end %>
